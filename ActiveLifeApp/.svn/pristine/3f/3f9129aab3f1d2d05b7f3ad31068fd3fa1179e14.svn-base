-(IBAction)btnSignUpPressed:(id)sender{
    [self.navigationController popViewControllerAnimated:YES];
}

-(NSInteger)numberOfSectionsInCollectionView:(UICollectionView *)collectionView
{
    return 3;
}

- (NSInteger)collectionView:(UICollectionView *)view numberOfItemsInSection:(NSInteger)section
{
    return 7;
}

- (UICollectionViewCell *)collectionView:(UICollectionView *)cv cellForItemAtIndexPath:(NSIndexPath *)indexPath;
{
    static NSString *identifier = @"Cell";
    UICollectionViewCell *cell = (UICollectionViewCell *)[cv dequeueReusableCellWithReuseIdentifier:identifier forIndexPath:indexPath];

    UIButton *buttonIcons = [[UIButton alloc] initWithFrame:CGRectMake(05, 10, 25, 25)];
    buttonIcons.tag = indexPath.section *100 + indexPath.row;
    [buttonIcons setImage:[UIImage imageNamed:@"basketball_icon"] forState:UIControlStateNormal];
    [buttonIcons addTarget:self action:@selector(btnIconPressed:) forControlEvents:UIControlEventTouchUpInside];
    [cell.contentView addSubview:buttonIcons];
    return cell;
}

-(IBAction)btnIconPressed:(id)sender{
    NSLog(@"Tag..%i",[sender tag]-100);
    UIButton *buttonIcons = (UIButton *)[iconsCollectionView viewWithTag:[sender tag]];
    [buttonIcons setImage:[UIImage imageNamed:@"iron_man"] forState:UIControlStateNormal];
}

